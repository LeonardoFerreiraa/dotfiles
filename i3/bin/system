#!/bin/bash

FONT_SIZE=(xrdb -query | grep "fontsize" | cut -f 2)
SELECTED=$(echo -e "Shutdown\nReboot\nLock\nLogout\nExit" | dmenu -i -fn "System San Francisco Display:pixelsize=$FONT_SIZE")

case $SELECTED in
    "Shutdown") shutdown -h now ;;
    "Lock") i3lock --color "#2f343f" ;;
    "Reboot") shutdown -r now ;;
    "Logout") i3-msg exit ;;
    *) ;;
esac
