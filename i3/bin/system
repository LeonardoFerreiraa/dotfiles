#!/bin/bash

SELECTED=$(echo -e "Shutdown\nReboot\nLock\nLogout\nExit" | dmenu -i -fn "System San Francisco Display:pixelsize=16")

case $SELECTED in
    "Shutdown") shutdown -h now ;;
    "Lock") i3lock --color "#2f343f" ;;
    "Reboot") shutdown -r now ;;
    "Logout") i3-msg exit ;;
    *) ;;
esac
