#/bin/bash

SAVE_MODE=$(echo "Clipboard\nFile\nExit" | ~/.config/i3/bin/menu)

case $SAVE_MODE in
    "Clipboard") 
        maim --format=png /dev/stdout $@ | xclip -selection clipboard -t image/png | notify-send 
        notify-send "Screnshot on Clipboad"
        ;;
    "File") 
        FILE_NAME=~/Pictures/$(date '+%d%m%Y%H%M%S.png')
        maim --format=png $@ $FILE_NAME
        notify-send "Screnshot on $FILE_NAME"
        ;;
    *) ;;
esac