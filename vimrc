set number

set autoindent
set shiftwidth=2
set tabstop=2
set expandtab
set smarttab
set so=7

set ignorecase
set incsearch
set hlsearch
set smartcase

set laststatus=2

syntax on
set background=dark

set nowrap

set mouse=a
set mousehide

set noswapfile
set autoread

set diffopt+=vertical

set list
set listchars=tab:▶\ ,trail:·

set hidden

let mapleader=","
nmap <silent><leader>l :nohls<cr>